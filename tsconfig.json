{
    "exclude": [
        //"node_modules",
        "**/*.spec.ts",
        
        // TEMP
        "./src/schematist.ts",
        "./src/index.ts",
        "./src/modules_old/**",
    ],
    "include": [
        "src/**/*",
        "tests/integration/**/*",
    ],
    "compilerOptions": {
        "noEmit": true,
        "noErrorTruncation": true,
        "esModuleInterop": true,
        "lib": ["es2020"],
        "allowJs": false,
        "strict": true,
        "noImplicitThis": true,
        
        // Note: we don't use TypeScript emit, but we still need to set the target to enable certain language features
        "target": "ES2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
    },
}

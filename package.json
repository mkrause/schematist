{
    "name": "schematist",
    "version": "0.0.0",
    "author": "mkrause",
    "license": "MIT",
    "repository": "https://github.com/mkrause/schematist",
    "description": "Data modeling library",
    "keywords": [],
    "files": [
        "src/",
        "lib-cjs/",
        "lib-esm/",
        "typings/index.d.ts"
    ],
    "typings": "./typings/index.d.ts",
    "engines": {
        "node": ">= 10.13"
    },
    "main": "./lib-cjs/index.js",
    "module": "./lib-esm/index.js",
    "scripts": {
        "build:cjs": "rm -rf ./lib-cjs && NODE_ENV=production BABEL_ENV=cjs babel src --out-dir lib-cjs --extensions '.js,.ts' --source-maps inline",
        "build:esm": "rm -rf ./lib-esm && NODE_ENV=production BABEL_ENV=esm babel src --out-dir lib-esm --extensions '.js,.ts' --source-maps inline",
        "types": "tsc --project ./tsconfig.decl.json",
        "test": "NODE_ENV=development BABEL_ENV=cjs mocha --require @babel/register --recursive tests/unit",
        "prepublishOnly": "npm run build:cjs && npm run build:esm"
    },
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@babel/register": "^7.9.0",
        "@babel/cli": "^7.8.4",
        "@babel/preset-env": "^7.9.5",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "@babel/preset-typescript": "^7.9.0",
        "typescript": "^3.8.3",
        "@types/node": "^13.13.2",
        "tsd": "^0.11.0",
        "mocha": "^7.1.2",
        "chai": "^4.2.0"
    },
    "dependencies": {
        "message-tag": "^0.5.1"
    }
}
